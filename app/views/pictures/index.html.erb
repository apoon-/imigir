<div class = "header">
  <h1> Picture Gallery </h1>
</div>

<div class = "button">
  <%= link_to "Click here to add a new picture", "/pictures/new" %>
</div>

<% @pictures.each do |picture| %>
<div class = "picture">
  <p><%= picture[:title] %>, <%= picture[:artist].upcase %></p>
    <%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %>
</div>
<% end %> 
